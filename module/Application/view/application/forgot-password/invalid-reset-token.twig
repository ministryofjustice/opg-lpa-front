{% extends 'layout/twig/layout.twig' %}

{% block pageTitle %}
    Invalid password link
{% endblock %}

{% block content %}

<div class="text">
    <p class="lede">You can’t reset your password with the link you’ve used</p>
    <p>This might be because you've:</p>
    <ul class="list list-bullet">
        <li>already used this link</li>
        <li>asked for another link since</li>
        <li>changed the link</li>
    </ul>
    <p><a href="{{ url('forgot-password') }}">Ask for a new link</a> so you can reset your password.</p>
</div>

{% endblock content %}