<li>
    <div class="person">
        <h3 class="person-name heading-small flush--ends">{{ notifiedPerson.name }}</h3>
        <p class="person-address flush--ends">{{ notifiedPerson.address }}</p>
        <ul class="person-actions">
            <li class="action-item">
                <a href="{{ editRoute }}" class="action-edit js-form-popup">View/edit details</a>
            </li>
            <li class="action-item">
                <a href="{{ deleteRoute }}" class="action-delete js-confirm" data-confirm-question="Do you want to remove this person?">Remove</a>
            </li>
        </ul>
    </div>
</li>
