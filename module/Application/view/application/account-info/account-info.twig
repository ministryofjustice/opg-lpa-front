<div class="js-toggle-nav" id="global-nav">
    <div class="inner">
        <nav role="navigation" class="content">

            <ul id="navigation">

                {% if name %}
                    <li class="user">{{ name ~ ':' }} </li>

                    {% set links = {
                        'user/about-you': 'Your details',
                        'user/dashboard': 'Your LPAs'
                    } %}

                    {% for page,title in links %}
                        <li>
                            {% if route == page %}
                                <span>{{ title }}</span>
                            {% else %}
                                <a href="{{ view.url(page) }}">{{ title }}</a>
                            {% endif %}
                        </li>
                    {% endfor %}

                {% endif %}

                <li><a href="{{ view.url('logout') }}">Sign out</a></li>

            </ul>

            {% if lastLogin %}
                <p class="lastsigned flush--ends">Last signed in: {{ lastLogin|date('j F Y \a\t g:ia', "Europe/London") }}</p>
            {% endif %}

        </nav>
    </div>
</div>
