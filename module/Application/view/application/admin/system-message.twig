{% extends 'layout/twig/layout.twig' %}

{% block pageTitle %}
    System message
{% endblock %}

{% set form = formErrorTextExchange(form, []) %}
{% set message = form.get('message') %}

{% block content %}

{{ form.setAttribute('class', 'form') ? '' }}
    
{{ message.setAttributes({
    id: 'message',
    rows: 10,
    cols: 67,
    class: 'form-control'
}) ? ''}}


{{ message.setOptions( { label: 'Message' }) ? '' }}

{{ form.prepare() ? '' }}
    
{{ form().openTag( form )|raw }}

    {{ formElement(form.get( form.csrfName )) }}

    <div class="text">
        <p>System messages will be seen by all visitors to the LPA service. They should be used to inform users of scheduled periods of maintenance or changes to the LPA service.</p>
    </div>

    <fieldset>
        <legend class="visuallyhidden">Set the system message</legend>

    	<div class="form-group {{ message.getMessages|length >0 ? 'error'}}">
            <label class="form-label" for="{{ message.getAttribute('id') }}">
                <span class="form-label-bold">{{ message.getOption('label') }}</span>
                {{ formElementErrorsV2(message) }}
            </label>
            {{ formElement(message) }}
        </div>
        
    </fieldset>


	<input type="submit" class="button" value="Set system message">
                
{{ form().closeTag|raw }}

{% endblock %}
