{% extends 'layout/twig/layout.twig' %}

{% block htmlTitle %}Track your LPA - {% endblock %}
{% block pageTitle %}{{ lpa.document.donor.name }}{% endblock %}
{% block supportTitleBottom %}
    <span class="heading-secondary">
        {{ lpa.type == 'property-and-financial' ? 'Property and finance' :
        ((lpa.type == 'health-and-welfare') ? 'Health and welfare' : 'Not selected') }}:
        {{ formatLpaId(lpa.id) }}
    </span>
{% endblock %}

{% block content %}

    <div class="govuk-box-highlight opg-status--waiting">
        <div class="">
            <h2 class="heading-xlarge">We're waiting to receive the LPA</h2>
        </div>
        <div>
            <p class="lede">If you have not posted your LPA yet, <a class="bold" href="/contact#postal-address" style="color: #fff">here's the address to send it to</a>.</p>
            <p class="lede">Please take postage time into account. Allow 5 working days for OPG to receive the LPA.</p>
            <p>If you think we should have received your LPA by now, please call 0300 456 0300</p>
            <p>Opening times: Monday, Tuesday, Thursday, Friday 9am to 5pm. Wednesday 10am to 5pm</p>
        </div>
        <div>
            <a class="heading-medium" style="color: #fff; display: inline-block" href="/user/dashboard">Back to your LPAs</a>
        </div>
    </div>

{% endblock content %}