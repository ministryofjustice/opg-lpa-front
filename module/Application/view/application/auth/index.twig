{% extends 'layout/twig/layout.twig' %}

{% block errorSummary %}
    {% include 'application/auth/error-summary.twig' %}
{% endblock %}

{% block pageTitle %}
    Sign in
{% endblock %}

{% block content %}

{% set form = formErrorTextExchange(form, []) %}

{{ form.setAttribute('class', 'form') ? '' }}

{% set email = form.get('email') %}
{% set password = form.get('password') %}

{{ email.setAttributes({id: 'email', autocomplete: 'off'}).setOptions( {label: 'Email address'} ) ? '' }}
{{ password.setAttributes({id: 'password_current', autocomplete: 'off'}).setOptions( {label: 'Password'} ) ? '' }}

{{ form.prepare() ? '' }}

<p>Sign in or <a href="{{ url('register') }}">create an account</a> to get started.</p>

{{ form().openTag( form )|raw }}

    {{ formElement(form.get( form.csrfName )) }}

    <fieldset>
        <legend class="visuallyhidden">Sign in</legend>
        <div class="form-group">
            {{ formLabel.openTag|raw }} {{ email.getOption('label') }} {{ formLabel.closeTag }}
            {{ formElement(email) }}
            {{ formElementErrors(email) }}
        </div>

        <div class="form-group">
        	{{ formLabel.openTag }} {{ password.getOption('label') }} {{ formLabel.closeTag }}
            {{ formElement(password) }}
            {{ formElementErrors(password) }}
        </div>
    </fieldset>


    <input type="submit" name="submit" id="signin-form-submit" value="Sign in" class="button">

{{ form().closeTag|raw }}

<p class="action group">
    <a href="{{ url('forgot-password') }}" type="submit" name="forgotpw" id="forgotpw-submit" class="link-style">Forgotten your password?</a>
</p>

{% endblock content %}