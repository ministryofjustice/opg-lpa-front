{% extends 'layout/layout.twig' %}

{% block content %}

<h1 style="font-size: 36px; line-height: 1.315; font-weight: 700; margin: 20px 0 26px 0; color: #0b0c0c">
    Update email address
</h1>
<p style="font-size: 19px; line-height: 1.315; margin: 0 0 20px 0; color: #0b0c0c">
    You have requested an update to your email address.
</p>
<p style="font-size: 19px; line-height: 1.315; margin: 0 0 20px 0; color: #0b0c0c">
    If you've do not wish to change your email address, just ignore this email.
</p>
<p style="font-size: 19px; line-height: 1.315; margin: 0 0 20px 0; color: #0b0c0c">
    To continue with the change, please click the following link in order to activate the new email address:
</p>
<p style="font-size: 19px; line-height: 1.315; margin: 0 0 20px 0; color: #0b0c0c">
    <!-- URLs have white-space: nowrap so that they don't wrap -->
    <a style="white-space: nowrap; color: #005ea5" href="{{ activateUrl }}">Verify my new email address</a>
</p>

{% endblock content %}